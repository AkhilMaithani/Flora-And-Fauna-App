<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF9D7"
    tools:context=".MuskDeerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/acTigerTitle"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="20sp"
                android:textStyle="bold"
                android:background="#610C63"
                android:textColor="@color/white"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400sp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#FFF9D7"
                app:cardElevation="10sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/nameTFa"
                    android:src="@drawable/tiger"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10sp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="#A1810955">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:padding="10sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/TigerContent"
                        android:padding="20sp"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="#A1810955">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="10sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:src="@drawable/home"
                                android:contentDescription="Home Icon"
                                android:layout_marginBottom="10sp"
                                android:layout_marginTop="10sp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Corbett National Park, Kalagarh Tiger Reserve, Rajaji Tiger Reserve"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:padding="15sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="20sp"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="10sp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:src="@drawable/location"
                                android:contentDescription="Location Icon"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="10sp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="At Uttarakhand"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:padding="15sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#A1810955">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:src="@drawable/population"
                        android:contentDescription="Population Icon"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="442"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="15sp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>